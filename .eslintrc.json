{
  "env": {
    "browser": true,
    "es2021": true
  },
  "rules": {
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["*.html"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "rules": {
        "no-undef": "error"
      }
    }
  ]
}
